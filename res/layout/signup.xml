<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/password"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/request_username"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter email as username"
        android:textColor="@color/black" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/password_req"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/request_username"
        android:layout_below="@+id/request_username"
        android:layout_marginTop="29dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:gravity="center"
        android:hint="password"
        android:inputType="textPassword"
        android:maxLength="12"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/try_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_below="@+id/re_password_req"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        style="?android:attr/borderlessButtonStyle"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/request_username"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Email" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Password" />



    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_req"
        android:layout_centerHorizontal="true"
        android:text="Confirm Password" />

    <EditText
        android:id="@+id/re_password_req"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/password_req"
        android:layout_below="@+id/TextView02"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:gravity="center"
        android:hint="password"
        android:inputType="textPassword"
        android:maxLength="12"
        android:textColor="@color/black" />

</RelativeLayout>
